{% extends 'anasayfabase.html.twig' %}
{% block title %}Hakkımızda|{{ data[0].title }}{% endblock %}
{% block keywords %}{{ data[0].keywords }}{% endblock %}
{% block description %}{{ data[0].description }}{% endblock %}
{% block body %}
    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="/anasayfa"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active">Hakkımızda</li>
                    </ul>
                </div>
                <div class="span4">
                    <div class="search">
                        <form class="input-append">
                            <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <h2>Hakkımızda</h2>
                </div>
            </div>
            <div class="row">
                <div class="span10">
                    {{ data[0].aboutus|raw }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
