{% extends 'anasayfabase.html.twig' %}

{% block title %}{{ app.user.name }}|Otellerim|Düzenle{% endblock %}
{% block body %}

<section id="subintro">
    <div class="container">
        <div class="row">
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="#">Üye Paneli</a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog with left sidebar</li>
                </ul>
            </div>
            <div class="span4">
                <div class="search">
                    <form class="input-append">
                        <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                        <button class="btn btn-dark" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="maincontent">
    <div class="container">
        <div class="row">
            {{ include('user/usermenu.html.twig') }}
            <div class="span8">
                <!-- start article 1 -->
                <article class="blog-post">
                    <div class="post-heading">
                        <h3>Otel Düzenleme Formu</h3>
                    </div>
                    <div class="row">
                        <div class="span8">
                            {{ include('hotel/_form.html.twig', {'button_label': 'Güncelle'}) }}<br>
                            <div class="row">
                                <div class="col-md-2">
                                    <a href="{{ path('user_hotel_index') }}" class="btn btn-block btn-info">Geri Dön</a>
                                </div>
                                <div class="col-md-2">
                                    {{ include('hotel/_delete_form.html.twig') }}
                                </div>
                            </div>

                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>
{% endblock %}

