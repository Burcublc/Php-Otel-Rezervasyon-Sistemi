{% extends 'anasayfabase.html.twig' %}

{% block title %}{{ app.user.name }}|Otellerim|Göster{% endblock %}
{% block body %}

<section id="subintro">
    <div class="container">
        <div class="row">
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                    <li><a href="#">Üye Paneli</a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog with left sidebar</li>
                </ul>
            </div>
            <div class="span4">
                <div class="search">
                    <form class="input-append">
                        <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                        <button class="btn btn-dark" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="maincontent">
    <div class="container">
        <div class="row">
            {{ include('user/usermenu.html.twig') }}
            <div class="span8">
                <!-- start article 1 -->
                <article class="blog-post">
                    <div class="post-heading">
                        <h3>Otel Ayrıntı Sayfası</h3>
                    </div>
                    <div class="row">
                        <div class="span8">

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ hotel.id }}</td>
                                </tr>
                                <tr>
                                    <th>Otel Adı</th>
                                    <td>{{ hotel.title }}</td>
                                </tr>
                                <tr>
                                    <th>Anahtar Kelimeler</th>
                                    <td>{{ hotel.keywords }}</td>
                                </tr>
                                <tr>
                                    <th>Tanımlamalar</th>
                                    <td>{{ hotel.description }}</td>
                                </tr>
                                <tr>
                                    <th>Resim</th>
                                    <td><img src="{{ asset('uploads/images/' ~ hotel.image ) }}" height="100"></td>
                                </tr>
                                <tr>
                                    <th>Yıldız Sayısı</th>
                                    <td>{{ hotel.star }}</td>
                                </tr>
                                <tr>
                                    <th>Adres</th>
                                    <td>{{ hotel.address }}</td>
                                </tr>
                                <tr>
                                    <th>Telefon</th>
                                    <td>{{ hotel.phone }}</td>
                                </tr>
                                <tr>
                                    <th>Fax</th>
                                    <td>{{ hotel.fax }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ hotel.email }}</td>
                                </tr>
                                <tr>
                                    <th>Şehir</th>
                                    <td>{{ hotel.city }}</td>
                                </tr>
                                <tr>
                                    <th>Ülke</th>
                                    <td>{{ hotel.country }}</td>
                                </tr>
                                <tr>
                                    <th>Konum</th>
                                    <td>{{ hotel.location }}</td>
                                </tr>
                                <tr>
                                    <th>Ayrıntılar</th>
                                    <td>{{ hotel.detail|raw }}</td>
                                </tr>
                                <tr>
                                    <th>Durum</th>
                                    <td>{{ hotel.status }}</td>
                                </tr>
                                <tr>
                                    <th>Created_at</th>
                                    <td>{{ hotel.createdAt ? hotel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-md-2">
                                    <a href="{{ path('user_hotel_index') }}" class="btn btn-block btn-info">Listeye Geri Dön</a>
                                </div>
                                <div class="col-md-2">
                                    <a href="{{ path('user_hotel_edit', {'id': hotel.id}) }}" class="btn btn-block btn-info btn-sm">Düzenle</a>
                                </div>
                                <div class="col-md-2">
                                    {{ include('hotel/_delete_form.html.twig') }}
                                </div>
                            </div>

                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>
{% endblock %}
