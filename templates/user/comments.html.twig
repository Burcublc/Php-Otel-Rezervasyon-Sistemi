{% extends 'anasayfabase.html.twig' %}

{% block title %}Yorumlarım{% endblock %}
{% block body %}
    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="#">Blog</a><i class="icon-angle-right"></i></li>
                        <li class="active">Blog with left sidebar</li>
                    </ul>
                </div>
                <div class="span4">
                    <div class="search">
                        <form class="input-append">
                            <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">

                            {{ include('user/usermenu.html.twig') }}


                <div class="span8">
                    <!-- start article 1 -->
                    <article class="blog-post">
                        <div class="post-heading">
                            <h3><a href="#">This is an example of standard post format</a></h3>
                        </div>
                        <div class="row">
                            <div class="span8">




                                <article class="blog-post">
                                    <div class="post-heading">
                                        <h3>Yorumlarım</h3>
                                    </div>

                                    <div class="row">
                                        <div class="span8">

                                            <table class="table table-bordered"><!--bu tabloyu templaten aldım. table class ismini alıp buraya yapıştırdım-->
                                                <thead>
                                                <tr>
                                                    <th>Konu</th>
                                                    <th>Yorum</th>
                                                    <th>Durum</th>
                                                    <th>Beğeniler</th>
                                                    <th>Otel İsim</th>
                                                    <th>Oluşturulan Tarih</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for comment in comments %}
                                                    <tr>
                                                        <td>{{ comment.subject }}</td>
                                                        <td>{{ comment.comment }}</td>
                                                        <td>{{ comment.status }}</td>
                                                        <td>
                                                            {% if comment.rate==1 %}
                                                                <i class="icon-heart"></i>
                                                            {% endif %}
                                                            {% if comment.rate==2 %}
                                                                <i class="icon-heart"></i><i class="icon-heart"></i>
                                                            {% endif %}
                                                            {% if comment.rate==3 %}
                                                                <i class="icon-heart"></i><i class="icon-heart"></i><i class="icon-heart"></i>
                                                            {% endif %}
                                                            {% if comment.rate==4 %}
                                                                <i class="icon-heart"></i><i class="icon-heart"></i><i class="icon-heart"></i><i class="icon-heart"></i>
                                                            {% endif %}
                                                            {% if comment.rate==5 %}
                                                                <i class="icon-heart"></i> <i class="icon-heart"></i> <i class="icon-heart"></i> <i class="icon-heart"></i> <i class="icon-heart"></i>
                                                            {% endif %}
                                                        </td>
                                                        <td>  <a href="{{ path('kullanici_hotel_show', {'id': comment.hotelid}) }}">{{ comment.title }}</a></td>
                                                        <td>{{ comment.created_at }}</td>


                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="16">Sonuç Bulunmadı.</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                    </article>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
