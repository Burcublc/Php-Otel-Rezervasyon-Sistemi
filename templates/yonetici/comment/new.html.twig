{% extends 'yoneticibase.html.twig' %}
{% block title %}Yorum Oluşturma Sayfası{% endblock %}
{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yorum Oluşturma</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yorum Oluşturma Formu</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                {{ include('yonetici/comment/_form.html.twig') }}
                <div class="col-md-2">
                    <a href="{{ path('comment_index') }}" class="btn btn-block btn-info">Listeye Geri Dön</a>
                </div>
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
{% endblock %}
