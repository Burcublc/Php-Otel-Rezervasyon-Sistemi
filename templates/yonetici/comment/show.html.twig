{% extends 'yoneticibase.html.twig' %}
{% block title %}Yorum İnceleme Sayfası{% endblock %}
{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yorum Ayrıntıları</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yorum Bilgileri</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>isim</th>
                            <td>{{ comment.subject }}</td>
                        </tr>
                        <tr>
                            <th>Yorum</th>
                            <td>{{ comment.comment }}</td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>{{ comment.status }}</td>
                        </tr>
                        <tr>
                            <th>Ip</th>
                            <td>{{ comment.ip }}</td>
                        </tr>
                        <tr>
                            <th>Kullancı İsim</th>
                            <td>{{ comment.userid }}</td>
                        </tr>
                        <tr>
                            <th>Otel No</th>
                            <td>{{ comment.hotelid }}</td>
                        </tr>
                        <tr>
                            <th>Resim</th>
                            <td><img src="{{ asset('uploads/images/' ~ comment.image ) }}" height="100"></td>
                        </tr>
                        <tr>
                            <th>Oy</th>
                            <td>{{ comment.rate }}</td>
                        </tr>
                        <tr>
                            <th>Oluşturulan Zaman</th>
                            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Güncellenen Zaman</th>
                            <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>

                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-2">
                    <a href="{{ path('comment_index') }}">Listeye Geri Dön</a>
                    </div>
                    <div class="col-md-2">
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Düzenle</a>
                    </div>
                    <div class="col-md-2">
                    {{ include('yonetici/comment/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
{% endblock %}

