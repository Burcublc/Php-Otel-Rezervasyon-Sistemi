{% extends 'yoneticibase.html.twig' %}

{% block title %}Otel Sayfası Düzenle{% endblock %}

{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Otel Sayfası Düzenleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Otel Düzenleme Formu</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">

                {{ include('yonetici/hotel/_form.html.twig', {'button_label': 'Güncelle'}) }}<br>
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{ path('hotel_index') }}" class="btn btn-block btn-info">Geri Dön</a>
                    </div>
                    <div class="col-md-2">
                        {{ include('yonetici/hotel/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </section>
</div>
{% endblock %}

