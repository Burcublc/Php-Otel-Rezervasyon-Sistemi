{% extends 'yoneticibase.html.twig' %}

{% block title %}Otel Anasayfası{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL, windowName, windowFeatures) {      window.open(windowURL, windowName , windowFeatures) };
    </SCRIPT>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Otel Listesi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="col-md-2">
                    <a href="{{ path('hotel_new') }}" class="btn btn-block btn-success btn-sm">Yeni Oluştur</a>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered"><!--bu tabloyu templaten aldım. table class ismini alıp buraya yapıştırdım-->
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kategori</th>
                        <th>Otel Adı</th>
                        <th>Resim</th>
                        <th>Yıldız Sayısı</th>
                        <th>Şehir</th>
                        <th>Tel</th>
                        <th>Email</th>
                        <th>Ülke</th>
                        <th>Resim Galeri</th>
                        <th>Odalar Galeri</th>
                        <th>Durum</th>
                        <th>Ekleyen</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for hotel in hotels %}
                        <tr>
                            <td>{{ hotel.id }}</td>
                            <td>{{ hotel.catname }}</td>
                            <td>{{ hotel.title }}</td>
                            <td><img src="{{ asset('uploads/images/' ~ hotel.image ) }}" height="40"></td>
                            <td>{{ hotel.star }}</td>
                            <td>{{ hotel.city }}</td>
                            <td>{{ hotel.phone }}</td>
                            <td>{{ hotel.email }}</td>
                            <td>{{ hotel.country }}</td>
                            <td>
                                <a href="javascript: openWin('{{ path('image_new', {'id': hotel.id}) }}','','toolbar=no,location=no,diractorles=0,status=no,top=50,left=100,menubar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                    <img src="{{ asset('assets/yonetici/img') }}/gallery.png" height="40">
                                </a>
                            </td>
                            <td>
                                <a href="javascript: openWin('{{ path('room_new', {'id': hotel.id}) }}','','toolbar=no,location=no,diractorles=0,status=no,top=50,left=100,menubar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                    <img src="{{ asset('assets/yonetici/img') }}/roomimage.jpg" style="width: 40px ; height: 40px">
                                </a>
                            </td>
                            <td>{{ hotel.status }}</td>
                            <td><a href="{{ path('yonetici_user_show', {'id': hotel.userid}) }}">{{ hotel.name }}{{ hotel.surname }}</a></td>
                            <td>
                                <a href="{{ path('hotel_show', {'id': hotel.id}) }}" class="btn btn-block btn-info btn-sm">Göster</a>

                                <a href="{{ path('hotel_edit', {'id': hotel.id}) }}" class="btn btn-block btn-info btn-sm">Düzenle</a>

                                {{ include('yonetici/hotel/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="16">Sonuç Bulunmadı.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
{% endblock %}
























