{% extends 'yoneticibase.html.twig' %}
{% block title %}Otel İnceleme Sayfası{% endblock %}
{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Otel Ayrıntıları</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Otel Bilgileri</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">


                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ hotel.id }}</td>
                            </tr>
                            <tr>
                                <th>Otel Adı</th>
                                <td>{{ hotel.title }}</td>
                            </tr>
                            <tr>
                                <th>Anahtar Kelimeler</th>
                                <td>{{ hotel.keywords }}</td>
                            </tr>
                            <tr>
                                <th>Tanımlamalar</th>
                                <td>{{ hotel.description }}</td>
                            </tr>
                            <tr>
                                <th>Resim</th>
                                <td><img src="{{ asset('uploads/images/' ~ hotel.image ) }}" height="100"></td>
                            </tr>
                            <tr>
                                <th>Yıldız Sayısı</th>
                                <td>{{ hotel.star }}</td>
                            </tr>
                            <tr>
                                <th>Adres</th>
                                <td>{{ hotel.address }}</td>
                            </tr>
                            <tr>
                                <th>Telefon</th>
                                <td>{{ hotel.phone }}</td>
                            </tr>
                            <tr>
                                <th>Fax</th>
                                <td>{{ hotel.fax }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ hotel.email }}</td>
                            </tr>
                            <tr>
                                <th>Şehir</th>
                                <td>{{ hotel.city }}</td>
                            </tr>
                            <tr>
                                <th>Ülke</th>
                                <td>{{ hotel.country }}</td>
                            </tr>
                            <tr>
                                <th>Konum</th>
                                <td>{{ hotel.location }}</td>
                            </tr>
                            <tr>
                                <th>Ayrıntılar</th>
                                <td>{{ hotel.detail|raw }}</td>
                            </tr>
                            <tr>
                                <th>Durum</th>
                                <td>{{ hotel.status }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ hotel.createdAt ? hotel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-2">
                            <a href="{{ path('hotel_index') }}" class="btn btn-block btn-info">Listeye Geri Dön</a>
                        </div>
                        <div class="col-md-2">
                            <a href="{{ path('hotel_edit', {'id': hotel.id}) }}" class="btn btn-block btn-info btn-sm">Düzenle</a>
                        </div>
                        <div class="col-md-2">
                            {{ include('yonetici/hotel/_delete_form.html.twig') }}
                        </div>
                    </div>
            </div>
            <div class="card-footer">
            </div>
        </div>

    </section>
</div>
{% endblock %}
