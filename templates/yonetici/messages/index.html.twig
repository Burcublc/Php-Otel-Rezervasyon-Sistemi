{% extends 'yoneticibase.html.twig' %}

{% block title %}Mesajlar{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4>Gelen Mesajlar</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>İsim</th>
                            <th>Konu</th>
                            <th>Mesaj</th>
                            <th>Durum</th>
                            <th>Ip</th>
                            <th>Not</th>
                            <th>Seçimler</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.id }}</td>
                            <td>{{ message.name }}</td>
                            <td>{{ message.subject }}</td>
                            <td>{{ message.message }}</td>
                            <td>{{ message.status }}</td>
                            <td>{{ message.ip }}</td>
                            <td>{{ message.note }}</td>
                            <td>
                                <a href="{{ path('messages_show', {'id': message.id}) }}" class="btn btn-block btn-info btn-sm">Göster</a>
                            </td>
                            <td>
                                <a href="{{ path('messages_edit', {'id': message.id}) }}" class="btn btn-block btn-info btn-sm">Düzenle</a>
                            </td>
                            <td>

                                {{ include('yonetici/messages/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">Sonuç Bulunamadı.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
{% endblock %}

