{% extends 'yoneticibase.html.twig' %}
{% block title %}Mesaj İnceleme Sayfası{% endblock %}
{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mesaj Ayrıntıları</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ message.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ message.name }}</td>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <td>{{ message.subject }}</td>
                        </tr>
                        <tr>
                            <th>Message</th>
                            <td>{{ message.message }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ message.status }}</td>
                        </tr>
                        <tr>
                            <th>Ip</th>
                            <td>{{ message.ip }}</td>
                        </tr>
                        <tr>
                            <th>Note</th>
                            <td>{{ message.note }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{ path('messages_index') }}">Listeye Geri Dön</a>
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('messages_edit', {'id': message.id}) }}">Düzenle</a>
                    </div>
                    <div class="col-md-2">
                        {{ include('yonetici/messages/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
{% endblock %}

