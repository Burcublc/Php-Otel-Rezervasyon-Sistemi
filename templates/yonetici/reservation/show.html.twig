{% extends 'yoneticibase.html.twig' %}
{% block title %}Rezervasyon İnceleme Sayfası{% endblock %}
{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <font size="5" color="#a52a2a">Rezervasyon Ayrıntıları</font>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th><font size="4" color="#a52a2a">Id Numarası:</font></th>
                            <td>{{ reservation[0].id }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Kullanıcı Adı Ve Soyadı:</font></th>
                            <td>{{ reservation[0].username }} {{ reservation[0].usersurname }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Hotel Adı:</font></th>
                            <td>{{ reservation[0].hotelname }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Oda Adı:</font></th>
                            <td>{{ reservation[0].roomname }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Rezervasyon Kişinin Adı:</font></th>
                            <td>{{ reservation[0].name }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Rezervasyon Yapan Kişinin Soyadı:</font></th>
                            <td>{{ reservation[0].surname }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Email:</font></th>
                            <td>{{ reservation[0].email }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Telefon:</font></th>
                            <td>{{ reservation[0].phone }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Giriş Tarihi:</font></th>
                            <td>{{ reservation[0].checkin ? reservation[0].checkin|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Çıkış Tarihi:</font></th>
                            <td>{{ reservation[0].checkout ? reservation[0].checkout|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Kalış Süresi:</font></th>
                            <td>{{ reservation[0].days }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Toplam Ücret:</font></th>
                            <td>{{ reservation[0].total }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Ip Adresi:</font></th>
                            <td>{{ reservation[0].ip }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Mesaj:<font size="4" color="#a52a2a"></th>
                            <td>{{ reservation[0].message|raw }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Yönetici Notu:</font></th>
                            <td>{{ reservation[0].note |raw}}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Durum:</font></th>
                            <td>{{ reservation[0].status }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Oluşturulma Tarihi:</font></th>
                            <td>{{ reservation[0].created_at ? reservation[0].created_at|date('d-m-Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th><font size="4" color="#a52a2a">Güncellenme Tarihi:</font></th>
                            <td>{{ reservation[0].updated_at ? reservation[0].updated_at|date('d-m-Y ') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-md-2">
                        <a href="{{ path('reservation_edit', {'id': reservation[0].id}) }}" class="btn btn-block btn-info btn-sm">Düzenle</a>
                    </div>

                </div>
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
{% endblock %}


