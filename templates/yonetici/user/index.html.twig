{% extends 'yoneticibase.html.twig' %}

{% block title %}Üye Anasayfası{% endblock %}

{% block body %}
<SCRIPT language="JavaScript" type="text/javascript">
    function openWin(windowURL, windowName, windowFeatures) {      window.open(windowURL, windowName , windowFeatures) };
</SCRIPT>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Üye Listesi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">AnaSayfa</a></li>
                        <li class="breadcrumb-item active">Boş Sayfa </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="col-md-2">
                    <a href="{{ path('yonetici_user_new') }}" class="btn btn-block btn-success btn-sm">Yeni Oluştur</a>
                </div>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Rolü</th>
                            <th>İsim</th>
                            <th>Soyisim</th>
                            <th>Resim</th>
                            <th>Durum</th>
                            <th>Seçim</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles ? user.roles|json_encode: '' }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.surname }}</td>
                            <td><img src="{{ asset('uploads/images/' ~ user.image ) }}" height="40"></td>
                            <td>{{ user.status }}</td>

                            <td>
                                <a href="{{ path('yonetici_user_show', {'id': user.id}) }}" class="btn btn-block btn-info btn-sm">Göster</a>
                                <a href="{{ path('yonetici_user_edit', {'id': user.id}) }}" class="btn btn-block btn-info btn-sm">Düzenle</a>
                                {{ include('yonetici/user/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">Sonuç Bulunamadı.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
    <!-- /.content-wrapper -->
{% endblock %}
